{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@email-unsubscribe/app",
  "version": "0.1.0",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch src/main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --allow-write src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-read --allow-write tests/",
    "test:coverage": "deno test --allow-net --allow-env --allow-read --allow-write --coverage=coverage tests/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts",
    "migrate": "deno run --allow-net --allow-env --allow-read src/db/cli.ts up",
    "migrate:down": "deno run --allow-net --allow-env --allow-read src/db/cli.ts down",
    "migrate:status": "deno run --allow-net --allow-env --allow-read src/db/cli.ts status"
  },
  "imports": {
    "@hono/hono": "npm:hono@^4",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225",
    "postgres": "npm:postgres@^3",
    "playwright": "npm:playwright@^1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
