# Environment Variables
# Copy this file to .env and fill in the values

# Application
PORT=8000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/email_unsubscribe
DATABASE_SCHEMA=email_unsubscribe

# Gmail OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback

# Encryption (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Session / Auth
SESSION_DOMAIN=cddc39.tech
COOKIE_SECRET=your-cookie-secret-here

# Playwright
PLAYWRIGHT_TIMEOUT=30000
TRACE_RETENTION_DAYS=30

# Storage paths
SCREENSHOTS_PATH=./data/screenshots
TRACES_PATH=./data/traces

# Rate limiting
SCAN_INTERVAL_MINUTES=60
MAX_UNSUBSCRIBES_PER_HOUR=100
